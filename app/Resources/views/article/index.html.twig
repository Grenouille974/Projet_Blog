{% extends 'base.html.twig' %} {% block body %}
<h1>Article list</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Datecreation</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
            <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
            <td>{{ article.titre }}</td>
            <td>{{ article.description }}</td>
            <td>{% if article.dateCreation %}{{ article.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <div class="btn-group btn-toggle" data-toggle="buttons">
                    <label class="btn {% if article.brouillon == 0 %}btn-primary{% endif %}">
                        <input type="radio" name="options" value="option1" disabled> Publi√©
                    </label>
                    <label class="btn {% if article.brouillon == 1 %}btn-primary{% endif %}">
                        <input type="radio" name="options" value="option2" disabled> Brouillon
                    </label>
                </div>
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('article_new') }}">Create a new entry</a>
    </li>
</ul>
{% endblock %}